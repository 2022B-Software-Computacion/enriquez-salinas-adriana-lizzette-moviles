<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.VideojuegoListActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/videojuegosNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de Videojuegos"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/nuevoVideojuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#e88eaa"
            android:text="Agrega un Videojuego"
            android:textColor="#f0dae1"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            tools:ignore="VisualLintButtonSize" />

        <FrameLayout
            android:id="@+id/fragment_videojuego"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>