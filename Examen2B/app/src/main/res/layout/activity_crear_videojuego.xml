<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CrearVideojuegoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/videojuegoEditTitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear un nuevo Videojuego"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingStart="0dp"
            android:paddingEnd="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="28dp"
            android:gravity="center_vertical|start"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese el nombre del videojuego"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/create_videojuego_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del videojuego"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:inputType="text"
            tools:ignore="VisualLintTextFieldSize"
            android:autofillHints="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese el año de lanzamiento"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/create_videojuego_anio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Año de lanzamiento"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:autofillHints=""
            tools:ignore="VisualLintTextFieldSize" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese el Rating del Videojuego"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>
        <Spinner
            android:id="@+id/spinner_videojuego_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:accessibilityLiveRegion="polite"
            android:contentDescription="Rating del videojuego"
            android:importantForAccessibility="yes"
            android:labelFor="@+id/spinner_videojuego_rating"
            android:minHeight="48dp"
            android:padding="12dp"
            android:prompt="Seleccione el rating"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingrese la casa desarrolladora"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"/>

        <EditText
            android:id="@+id/create_videojuego_casa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Casa desarrolladora"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:padding="12dp"
            android:textSize="16sp"
            android:autofillHints=""
            tools:ignore="VisualLintTextFieldSize" />
        <Button
            android:id="@+id/button_guardar_videojuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Crear nuevo Videojuego"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:background="@color/purple_500"
            android:padding="16dp"
            android:gravity="center"
            tools:ignore="VisualLintButtonSize" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>